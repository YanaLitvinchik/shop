@model DAL.Good
@{
    ViewBag.Title = "Admin: Edit";
}

<div class="container">
    <div class="row justify-content-center" style="margin-top:50px;margin-bottom:50px;">
        <h2>Admin: Edit</h2>
    </div>
    @using (Html.BeginForm("NewGood", "Admin", FormMethod.Post))
    {
        <div class="row">
            <div class="col-5 border-right">
                <div class="display-1 ">
                    <img width="400"
                         src="@Url.Content("~/" + @Model.ImageUrl + ".jpg")"
                         alt="Add a photo" />
                </div>
            </div>
            <div class="col-7">
                @Html.HiddenFor(x => x.GoodId)
                <div class=" form-group row">
                    <label for="colFormLabel" class="col-sm-4 col-form-label"> Good Name :</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.GoodName)
                    </div>
                </div>
                <div class=" form-group row">
                    <label for="colFormLabel" class="col-sm-4 col-form-label"> Image Url :</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.ImageUrl)
                    </div>
                </div>
                <div class=" form-group row">
                    <label for="colFormLabel" class="col-sm-4 col-form-label"> Short Description :</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.ShortDescription)
                    </div>
                </div>
                <div class=" form-group row">
                    <label for="colFormLabel" class="col-sm-4 col-form-label"> CategoryId :</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.CategoryId)
                    </div>
                </div>
                <div class=" form-group row">
                    <label for="colFormLabel" class="col-sm-4 col-form-label"> Price :</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Price)
                    </div>
                </div>
                <div class=" form-group row">
                    <label for="colFormLabel" class="col-sm-4 col-form-label"> Good Count :</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.GoodCount)
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="@Url.Action("Index", "Admin")" class="text-info link mr-3 p-2">Cancel and return to List</a>
                    <button type="submit" class="btn btn-outline-success">Save</button>
                </div>
            </div>
        </div>
    }
</div>