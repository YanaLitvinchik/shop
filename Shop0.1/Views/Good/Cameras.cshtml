
@model DAL.Good

@{
    ViewBag.Title = "Cameras";
}

<h2>Cameras here</h2>



    <div class="row" style=" margin-top: 100px;">
        @foreach (var good in ViewBag.Goods)
        {
            <div class="col-md-4" style="margin: 5px 0px;padding: 2px 5px;">
                <div class="card">
                    <img src="@Url.Content("~/" + good.ImageUrl + ".jpg")" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">@good.GoodName</h4>
                        <p class="card-text">@good.ShortDescription</p>
                        <h3 class="card-text"> @good.Price.ToString("c")</h3>
                        <button id="btnbasket" type="button" class="btn btn-info">
                            @Html.ActionLink("Add to basket", "AddToCart", "Cart", new { goodId = good.GoodId, returnUrl = Request.Url.PathAndQuery }, null)
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

