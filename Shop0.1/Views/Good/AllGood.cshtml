@model DAL.Good
@{
    ViewBag.Title = "Canon";

}

<h2>All product here</h2>

<div class="container">
    <div class="row" style=" margin-top: 100px;">
        @foreach (var good in ViewBag.Goods)
        {
            <div class="col-md-4" style="margin: 5px 0px;padding: 2px 5px;">
                <div class="card">
                    <img src="@Url.Content("~/" + good.ImageUrl + ".jpg")" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@good.GoodName</h5>
                        <p class="card-text">@good.ShortDescription</p>
                        <h3 class="card-text"> @good.Price</h3>
                        @*<button type="button" class="btn btn-info">Add to basket</button>*@
                        <div class="item">
                            @using (Html.BeginForm("AddToCart", "Index"))
                            {
                                @Html.HiddenFor(x => x.GoodId)
                                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                <input type="submit" value="Add to basket" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav>
    <ul class="pagination">
        @for (int i = 0; i < ViewBag.CountOfPages; i++)
        {
            <li class="page-item">
                @Html.ActionLink((i + 1).ToString(), "Index", new { id = i + 1 }, new { @class = "page-link" })
            </li>
        }
    </ul>
</nav>

