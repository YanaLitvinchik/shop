@model Shop0._1.Models.CartIndexViewModel
@{
    ViewBag.Title = "Cart";
}


<h2>Your basket</h2>
<div class="container">
<table style="width:90%;" align="center">
    <thead>
        <tr>
            <th align="center">Quantity</th>
            <th align="left">Item</th>
            <th align="right">Price</th>
            <th align="right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
        <tr>
            <td align="center">@line.Quantity</td>
            <td align="left"> @line.Good.GoodName</td>
            <td align="right">@line.Good.Price.ToString("c")</td>
            <td align="right">@((line.Quantity * line.Good.Price).ToString("c"))</td>
            <td>
                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                {
                    @Html.Hidden("GoodId", line.Good.GoodId)
                    @Html.HiddenFor(x => x.ReturnUrl)
                    <input class="actionButtons" type="submit" value="Remove" />
                }
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" align="right">Total:</td>
            <td align="right">
                @Model.Cart.ComputeTotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<p align="center" class="actionButtons">
    <a href="@Model.ReturnUrl">Continue shopping</a>
    @Html.ActionLink("Checkout now", "Checkout")
</p>

    </div>